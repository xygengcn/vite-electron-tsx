{
  "compileOnSave": true,
  "compilerOptions": {
    "jsx": "preserve",
    "target": "ESNext",
    "module": "CommonJS",
    "sourceMap": false,
    "outDir": "./dist",
    "declaration": true,
    "allowJs": true,
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "src/render/*"
      ],
    },
    "lib": [
      "esnext",
      "dom"
    ],
    "types": [
      "vite/client",
      "node"
    ],
    "typeRoots": [
      "src/typings/*"
    ],
    "strict": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "plugins": [
      {
        "name": "@vuedx/typescript-plugin-vue"
      }
    ]
  },
  "include": [
    "src"
  ]
}